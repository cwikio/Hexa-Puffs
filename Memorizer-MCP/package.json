{
  "name": "annabelle-memory-mcp",
  "version": "1.0.0",
  "description": "Memory MCP server for Annabelle AI Assistant - persistent memory with fact extraction",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --config tests/vitest.config.ts",
    "test:unit": "vitest run --config tests/vitest.unit.config.ts",
    "test:watch": "vitest --config tests/vitest.config.ts",
    "test:facts": "vitest run --config tests/vitest.config.ts tests/integration/facts.test.ts",
    "test:conversations": "vitest run --config tests/vitest.config.ts tests/integration/conversations.test.ts",
    "test:profiles": "vitest run --config tests/vitest.config.ts tests/integration/profiles.test.ts",
    "test:memory": "vitest run --config tests/vitest.config.ts tests/integration/memory.test.ts",
    "test:stats": "vitest run --config tests/vitest.config.ts tests/integration/stats.test.ts",
    "test:export": "vitest run --config tests/vitest.config.ts tests/integration/export-import.test.ts",
    "test:sanitizer": "vitest run --config tests/vitest.config.ts tests/integration/sanitizer.test.ts",
    "test:multiagent": "vitest run --config tests/vitest.config.ts tests/integration/multi-agent.test.ts",
    "test:skills": "vitest run --config tests/vitest.config.ts tests/integration/skills.test.ts",
    "test:lifecycle": "vitest run --config tests/vitest.config.ts tests/lifecycle/",
    "test:coverage": "vitest run --config tests/vitest.config.ts --coverage"
  },
  "dependencies": {
    "@mcp/shared": "file:../Shared",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "better-sqlite3": "^11.0.0",
    "dotenv": "^17.2.4",
    "groq-sdk": "^0.5.0",
    "openai": "^4.0.0",
    "sqlite-vec": "^0.1.7-alpha.2",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^22.10.0",
    "@vitest/coverage-v8": "^3.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "annabelle": {
    "mcpName": "memory",
    "transport": "stdio",
    "sensitive": false,
    "label": "Memory",
    "toolGroup": "Knowledge & Memory",
    "keywords": ["remember", "memory", "forget", "fact", "contact"],
    "guardianScan": {
      "input": false,
      "output": false
    }
  }
}
