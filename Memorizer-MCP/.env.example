# Hexa Puffs Memory MCP Configuration

# Transport mode: stdio (for MCP clients) or sse (for HTTP testing)
TRANSPORT=stdio
PORT=8005

# Database path
MEMORY_DB_PATH=~/.hexa-puffs/data/memory.db

# Export path for memory transparency
MEMORY_EXPORT_PATH=~/.hexa-puffs/memory-export/

# AI Provider for fact extraction
# Options: groq, lmstudio
AI_PROVIDER=groq

# Groq settings (cloud AI)
GROQ_API_KEY=gsk_your_key_here
GROQ_MODEL=llama-3.3-70b-versatile

# LM Studio settings (local AI)
LMSTUDIO_BASE_URL=http://localhost:1234/v1
LMSTUDIO_MODEL=local-model

# AI generation settings
AI_TEMPERATURE=0.3
AI_MAX_TOKENS=500

# Fact extraction settings
FACT_EXTRACTION_ENABLED=true
CONFIDENCE_THRESHOLD=0.7
MAX_FACTS_PER_CONVERSATION=3
SKIP_SHORT_CONVERSATIONS=50

# Logging
LOG_LEVEL=info
