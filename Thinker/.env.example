# Master switch (mode flag - when true, Thinker handles Telegram; when false, Claude Desktop does)
THINKER_ENABLED=true

# LLM Provider (groq | lmstudio | ollama)
THINKER_LLM_PROVIDER=groq

# Groq (cloud, fast, cheap - DEFAULT)
GROQ_API_KEY=gsk_your_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile

# LM Studio (local, free, private)
LMSTUDIO_BASE_URL=http://localhost:1234/v1
LMSTUDIO_MODEL=

# Ollama (local, flexible)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# Orchestrator connection (MCP SDK over HTTP)
ORCHESTRATOR_URL=http://localhost:8000

# Thinker HTTP server (for health checks)
THINKER_PORT=8006

# Polling (own setInterval, not Inngest)
TELEGRAM_POLL_INTERVAL_MS=10000

# Agent
THINKER_AGENT_ID=thinker

# Session persistence
# THINKER_SESSIONS_DIR=~/.hexa-puffs/sessions
# THINKER_SESSION_ENABLED=true
# THINKER_SESSION_COMPACTION_ENABLED=true
# THINKER_SESSION_MAX_AGE_DAYS=7

# Compaction model â€” cheap model for session summarization (reuses GROQ_API_KEY)
THINKER_COMPACTION_PROVIDER=groq
THINKER_COMPACTION_MODEL=llama-3.1-8b-instant

# Logging
LOG_LEVEL=info
TRACE_LOG_PATH=~/.hexa-puffs/logs/traces.jsonl
