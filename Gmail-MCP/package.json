{
  "name": "gmail-mcp",
  "version": "1.0.0",
  "description": "MCP server for Gmail integration",
  "type": "module",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/src/index.js",
    "dev": "tsx src/index.ts",
    "setup-oauth": "tsx scripts/setup-oauth.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:api": "vitest run --config vitest.api.config.ts",
    "typecheck": "tsc --noEmit",
    "test:unit": "vitest run --config tests/vitest.unit.config.ts"
  },
  "keywords": [
    "mcp",
    "gmail",
    "email",
    "ai",
    "agent"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@mcp/shared": "file:../Shared",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "dotenv": "^17.2.4",
    "googleapis": "^140.0.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "annabelle": {
    "mcpName": "gmail",
    "sensitive": true,
    "label": "Gmail",
    "toolGroup": "Communication",
    "keywords": ["email", "mail", "inbox", "draft", "compose", "calendar", "meeting", "schedule", "event"],
    "guardianScan": {
      "input": false,
      "output": true
    }
  }
}
