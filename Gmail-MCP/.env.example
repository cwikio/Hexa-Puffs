# Transport configuration
TRANSPORT=stdio
PORT=8008

# Gmail OAuth2 paths
GMAIL_CREDENTIALS_PATH=~/.hexa-puffs/gmail/credentials.json
GMAIL_TOKEN_PATH=~/.hexa-puffs/gmail/token.json

# Polling configuration
GMAIL_POLLING_ENABLED=false
GMAIL_POLLING_INTERVAL_MS=60000

# Telegram notification (via Orchestrator)
GMAIL_NOTIFY_TELEGRAM=false
GMAIL_TELEGRAM_CHAT_ID=
ORCHESTRATOR_URL=http://localhost:8010

# Logging
LOG_LEVEL=info
