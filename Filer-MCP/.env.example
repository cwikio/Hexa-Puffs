# Transport: "stdio" (default) or "http"/"sse"
TRANSPORT=stdio

# Port for HTTP transport
PORT=8003

# Workspace path (where AI creates files)
WORKSPACE_PATH=~/Downloads/AI-Workspace/

# Grants database path
GRANTS_DB_PATH=~/.hexa-puffs/data/grants.db

# Audit log path
AUDIT_LOG_PATH=~/.hexa-puffs/logs/fileops-audit.log

# Agent identification
AGENT_ID=main
SESSION_ID=default

# Log level
LOG_LEVEL=INFO

# Temp file cleanup (days before auto-delete)
TEMP_CLEANUP_DAYS=7
