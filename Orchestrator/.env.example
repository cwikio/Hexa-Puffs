# Server Configuration
TRANSPORT=stdio           # "stdio" for MCP protocol, "sse" for HTTP testing
PORT=8000                 # HTTP port (only used when TRANSPORT=sse)

# Downstream MCP Servers
GUARDIAN_MCP_URL=http://localhost:8003
TELEGRAM_MCP_URL=http://localhost:8002
ONEPASSWORD_MCP_URL=http://localhost:8001
MEMORY_MCP_URL=http://localhost:8005
FILER_MCP_URL=http://localhost:8004

# Security Settings
SCAN_ALL_INPUTS=true
SECURITY_FAIL_MODE=closed    # "closed" blocks when scanner unavailable, "open" allows

# Logging
LOG_LEVEL=info            # debug, info, warn, error
