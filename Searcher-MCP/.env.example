# Brave Search API Key (required)
# Get your API key at https://brave.com/search/api/
BRAVE_API_KEY=your_brave_api_key_here

# Rate limit in milliseconds between requests
# Free plan: 1100 (1 req/sec), Base plan: 55 (20 req/sec)
BRAVE_RATE_LIMIT_MS=1100

# Transport mode: "stdio" (default) or "http"/"sse"
TRANSPORT=stdio

# HTTP port (only used when TRANSPORT=http)
PORT=8007

# Maximum characters returned by web_fetch tool (default: 20000)
WEB_FETCH_MAX_LENGTH=20000
